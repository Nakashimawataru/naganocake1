<h2>会員情報編集</h2>
<table>
 <%= form_with model: @customer, url: customers_path do |f| %>
      <div class="form-group">
        <tr>
        <th><label for="inputTitle">氏名</label></th>
          <td><%= f.text_field :first_name %>
          <%= f.text_field :last_name %></td>
        </tr>
         <tr>
         <th><label for="inputTitle">カナ</label></th>
           <td><%= f.text_field :first_name_kana %>
          <%= f.text_field :last_name_kana %></td>
          </tr>
           <tr>
         <th><label for="inputTitle">郵便番号</label></th>
           <td><%= f.text_field :postal_code %></td>
           </tr>
          <tr>
         <th><label for="inputTitle">住所</label></th>
           <td><%= f.text_field :address %></td>
           </tr>
           <tr>
         <th><label for="inputTitle">電話番号</label></th>
           <td><%= f.text_field :telephone_number %></td>
           </tr>
         <tr>
         <th><label for="inputTitle">メールアドレス</label></th>
           <td><%= f.text_field :email %></td>
           </tr>
      </div>
 </table>
        <%= f.submit "編集内容を保存", class:"btn btn-success" %>
      <% end %>

      <%= link_to "退会する", customers_cancellation_path, class:"btn btn-danger" %>
