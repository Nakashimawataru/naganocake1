

  <span class=" mb-3 bg-secondary text-white">新規会員登録</span>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table>
  <tbody>
    <tr>
      <th><%= f.label :"名前" %></th>
    <td><%= f.label :"(性)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>

    <%= f.label :"(名)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
     </tr>
    <th><%= f.label :"フリガナ" %></th>
    <td><%= f.label :"(セイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    <%= f.label :"(メイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
    </tr>
    <tr>
    <th><%= f.label :"メールアドレス" %></th>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
    <th><%= f.label :"郵便番号" %></th>
    <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
    </tr>
    <tr>
    <th><%= f.label :"住所" %></th>
    <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
    </tr>
    <tr>
    <th><%= f.label :"電話番号" %></th>
    <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
    </tr>
    <tr>
    <th><%= f.label :"パスワード(6文字以上)" %></th>
    <td><% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    <tr>
    <th><%= f.label :"パスワード(確認用)" %></th>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
    <td>
    <%= f.submit "新規登録", class:"btn btn-success" %>
    </td>
<% end %>
</tbody>
</table>
<span class=" mb-3 bg-secondary text-white">すでに登録済みの方</span></br>
<%= link_to "こちら",  new_customer_session_path  %>からログインしてください
