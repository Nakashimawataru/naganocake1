<div class="container">
<h2>注文履歴詳細</h2>
<div class="row">
<div class="col-md-5" >
  <caption>注文情報</caption>
<table class="table table-bordered">

  <thaed>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払方法</th>
    </tr>
  </thaed>
  <tbody>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    <td><%= @order.address %></td>
    <td><%= @order.method_of_payment %></td>
  </tbody>
</table>
</div>
<div class="col-md-5" >
    <caption>請求情報</caption>
<table class="table table-bordered">

  <tbody>
    <tr>
      <td>商品合計</td>
      <td><%= @order.payment_amount - @order.postage %></td>
    </tr>
    <tr>
      <td>配送料</td>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <td>請求金額</td>
      <td><%= @order.payment_amount %></td>
    </tr>
  </tbody>
</table>
</div>
</div>
<table class="table col-md-6 table-bordered">
<h3>注文内容</h3>
<thaed>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
</thaed>
<tbody>

    <% @order.order_details.each do |order| %>
      <td><%= order.item.name %></td>
      <td><%= order.purchase_amount %></td>
      <td><%= order.quantity %></td>
      <td><%= order.purchase_amount * order.quantity %></td>
    <% end %>
</tbody>
</table>
</div>