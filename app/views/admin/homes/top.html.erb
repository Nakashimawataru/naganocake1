<h3>注文履歴一覧</h3>
<table>
<thaed>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
  </tr>
</thaed>
<tbody>
  <% @orders.each do |order| %>
  <tr>
    <td><%= link_to order.created_at.strftime('%Y/%m/%d'),admin_order_path(order.id) %></td>
    <td><%= order.name %></td>
    <% sam = 0 %>
    <% order.order_details.each do |order_detail| %>
      <% sam += order_detail.quantity  %>
      <% end %>
    <td><%= sam %></td>
  </tr>
  <% end %>
</table>